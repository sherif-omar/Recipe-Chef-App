<div class="row col-md-12" >
  <%= form_for([@recipe,@recipe.comments.build]) do |f| %> 
    <div class="form-group">
      <%= f.text_area :content, :class => "form-control", cols: 20, rows:5 %>
    </div>
    <div class="form-group">
      <%= f.submit "Comment!", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>