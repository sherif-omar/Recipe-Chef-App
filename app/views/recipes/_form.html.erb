<%= form_for(@recipe, :html => {multipart: true, class: "form-horizontal" }) do |f| %>

  
<div class="col-md-10 col-md-offset-1">
  <div class="form-group">
    <%= f.label :title, :class => 'control-label ' %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :summary, :class => 'control-label' %>
    <%= f.text_field :summary, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label' %>
    <%= f.text_area :description, :class => 'form-control', :rows => 8 %>
  </div>
  <div class="form-group">
    <%= f.label :picture, :class => 'control-label' %>
    <%= f.file_field :picture,accept: "image/jpeg,image/png,image/gif", :class => 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.submit nil, :class => 'btn btn-primary btn-block' %>
  </div>
</div>
<% end %>


<script type="text/javascript">
  
  
   $('#recipe_picture').bind('change', function() {
     var picture_size = this.files[0].size/1024/1024;
     if(picture_size > 1){
            alert("Maximum picture size is 1MB");
     }
        });
  
</script>x